@{
    ViewData["Title"] = "Post";
}
@model FlutterWeb.Client.Models.PostViewModel

<div class="columns is-centered" id="PostView" data-id =@Model.CommentOfId>
    <div class="column is-one-third is-post-container">
        <form asp-controller="Post" asp-action="Comment" method="POST">
        
         <input class="is-hidden" type="text"  name="UserName" id="UserName" value="@User.Identity.Name">
         <input class="is-hidden" type="text"  name="id" id="id" value=@Model.PostId>
            
        <textarea class="textarea" placeholder="Your post here" id="PostContent" name="Content"></textarea>
    <button class="button is-Flutter" >Post</button>
      </form>
     </div>
</div>
