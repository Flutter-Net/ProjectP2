@{
  Layout = "_LoggedInLayout";
}
@model FlutterWeb.Client.Models.UserViewModel



<div class="columns" id="profile">
    <div class="column is-one-third">
        <div class="filters-container">
            <div class="columns is-centered">
                <h1 class="is-size-1 is-weight-bold has-text-black" id="LoggedIn">
                   @Model.UserName
                </h1>
                <hr>
            </div>
            <div class="columns is-centered">
                <div class="is-post">
                    <p>
                        @*AboutMe*@

                    </p>
                </div>
                <hr>
            </div>
            <div class="columns is-centered">
                <p>
                    @*Date Joined*@

                </p>
                <hr>
            </div>
        </div>
        <br>
        <br>
        <div class="filters-container">
            <div class="columns is-centered">
                <h1 class="is-size-1 is-weight-bold has-text-black">View:</h1>
                <hr>
            </div>
            <div class="columns is-centered">
                <button class="button is-Flutter is-long">Posts</button>
                <hr>
            </div>
            <div class="columns is-centered">
                <button class="button is-Flutter is-long">Comments</button>
                <hr>
            </div>
            <div class="columns is-centered">
                <button class="button is-Flutter is-long">By Likes</button>
                <hr>
            </div>
            <div class="columns is-centered">
                <button class="button is-Flutter is-long">By Comments</button>
                <hr>
            </div>
            <div class="columns is-centered">
                <button class="button is-Flutter is-long">By Date</button>
                <hr>
            </div>

        </div>
    </div>
    <div class="column is-one-third is-post-container" >
    
      <form asp-controller="Post" asp-action="AddPost" method="POST">
        <input class="is-hidden" type="text"  name="UserId" id="UserId" value=@Model.UserId>
        <input class="is-hidden" type="text"  name="UserName" id="UserName" value=@Model.UserName>
        <textarea class="textarea" placeholder="Your post here" id="PostContent" name="Content"></textarea>
    <button class="button is-Flutter" id="PostBtn" >Post</button>
      </form>

        <div id="ProfileFeed"></div>
        }
        }


    </div>
</div>
